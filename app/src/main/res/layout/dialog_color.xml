                android:layout_height="60dp"
                android:background="@drawable/bg_gradent_4" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
