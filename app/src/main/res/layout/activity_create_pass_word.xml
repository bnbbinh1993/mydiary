<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CreatePassWordActivity">
    <com.hanks.passcodeview.PasscodeView
        android:id="@+id/passcodeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bottom_navigation2"
        app:firstInputTip="@string/_messenger_password"
        app:secondInputTip="@string/_messenger_re_pass"
        app:wrongInputTip="@string/_messenger_wrong"
        app:correctInputTip="@string/_messenger_correct"
        app:correctStateColor="#00BCD4"
        app:wrongStateColor="#ea2b46"
        app:normalStateColor="#ffffff"
        app:numberTextColor="#222222"
        app:passcodeLength="6"
        app:passcodeViewType="set_passcode"/>
</RelativeLayout>