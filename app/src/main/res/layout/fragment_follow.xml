<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.CreateFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:clipToPadding="false"
        android:overScrollMode="never"
        app:tabBackground="@drawable/select_tab"
        app:tabGravity="fill"
        app:tabIconTintMode="multiply"
        app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable"
        app:tabPaddingEnd="10dp"
        app:tabPaddingStart="10dp"
        app:tabRippleColor="#fff"
        app:tabSelectedTextColor="#FFFFFF"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance">


        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cardo"
            android:text="@string/_in_progress" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cardo"
            android:text="@string/_finished" />


    </com.google.android.material.tabs.TabLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mRecyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tablayout"
        android:layout_marginTop="0dp"
        android:overScrollMode="never" />

    <LinearLayout
        android:id="@+id/no_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tablayout"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="50dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_zombie" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/cardo"
            android:text="@string/_messenger_notification"
            android:textAlignment="center" />
    </LinearLayout>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fab"
        style="@style/custom_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:isScrollContainer="true"
        app:fabCustomSize="45dp"
        app:fabSize="auto"
        app:fab_addButtonColorNormal="@color/bottom_navigation2"
        app:fab_addButtonColorPressed="@color/bottom_navigation2"
        app:maxImageSize="18dp"
        app:rippleColor="@color/white">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fbutton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorDisabled="@color/white"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="@color/bottom_navigation2"
            app:fab_icon="@drawable/ic_alarm"
            app:fab_size="mini"
            app:fab_title="Xóa all"
            app:rippleColor="@color/white" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fbutton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorDisabled="@color/white"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="@color/bottom_navigation2"
            app:fab_icon="@drawable/ic_dustbin"
            app:fab_size="mini"
            app:fab_title="Xóa all"
            app:rippleColor="@color/white" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>