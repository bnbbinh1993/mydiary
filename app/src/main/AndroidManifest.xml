<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mydiary">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mydiary">
        <activity android:name=".activity.LoginActivity"></activity>
        <activity android:name=".activity.BandsActivity"></activity>
        <activity android:name=".activity.ChangePasswordActivity" />
        <activity android:name=".activity.CreatePassWordActivity" />
        <activity android:name=".activity.PasswordActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SettingActivity" />
        <activity
            android:name=".activity.EditCountActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.EditActivity" />
        <activity android:name=".activity.ShowFollowActivity" />
        <activity
            android:name=".activity.ShowDiaryActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.FinishActivity" />
        <activity
            android:name=".activity.CountDownActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.NoteActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".MainActivity" />

        <receiver android:name=".receiver.AlarmReceiver" />
        <receiver android:name=".receiver.AlarmToastReceiver" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~6300978111" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>